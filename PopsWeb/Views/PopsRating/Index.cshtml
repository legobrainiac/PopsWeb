@model IEnumerable<PopsWeb.Models.PopsRating>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            Rating
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            <img src="@Url.Content(String.Format("~/Content/Pops/{0}.jpg",item.id_pop))" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rating_pos)
        </td>
    </tr>
}

</table>
