@model IEnumerable<PopsWeb.Models.PopsModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Collection Name
        </th>
        <th>
            Price
        </th>
        <th>Image</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pop_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pop_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pop_collection_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            <img src="@Url.Content(String.Format("~/Content/Pops/{0}.jpg",item.id))" width="100" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id }) |
            @Html.ActionLink("Rate", "Rate", new { id = item.id })
        </td>
    </tr>
}
</table>
